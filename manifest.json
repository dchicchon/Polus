{
  "manifest_version": 2,
  "name": "Polus",
  "version": "1.0.1.2",
  
  "short_name": "Polus",
  "description": "An online planner to help make you more effecient!",
  "author": "dchicchon",

  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "cookies",
    "*://*.unsplash.com/"
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  }
}
