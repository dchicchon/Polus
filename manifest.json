{
  "manifest_version": 2,
  "name": "Polus",
  "version": "1.0.1.3",
  
  "short_name": "Polus",
  "description": "An online planner to help make you more effecient!",
  "icons": {
    "16": "images/icon16.png",
    "48":"images/icon48.png",
    "128":"images/icon128.png"
  },

  "author": "dchicchon",

  "incognito": "split",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "cookies",
    "*://*.unsplash.com/"
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  }
}
