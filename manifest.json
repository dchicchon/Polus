{
  "manifest_version": 2,
  "name": "Polus",
  "version": "1.0.1.6",
  
  "short_name": "Polus",
  "description": "An online planner to help make you more effecient!",
  "icons": {
    "16": "images/polus_tab_icon.png",
    "48":"images/polus_icon48.png",
    "128":"images/polus_icon128.png"
  },

  "author": "dchicchon",
  "incognito": "split",

  "browser_action": {
    "default_title":"Polus",
    "default_icon":"images/polus_tab_icon.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "storage"

  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  }
}
